<div class="displayPage" xmlns="http://www.w3.org/1999/html">
  <div class="row">
    <div class="col s12 m4 l3">
      <img class="img-responsive" src="http://placehold.it/250x150">
    </div>
    <div class="col s12 m4 l8">
      <div class="row">
        <h4>{{businesses.name}}</h4>
      </div>
      <div class="row binfo">{{businesses.address}}</div>
      <div class="row binfo">{{businesses.phone_number}}</div>
    </div>
  </div>

  <div class="row">
    <div class="col s12 m8 l8">
      {{#if isAuthenticated}}
      <div class="card-panel z-depth-3">
        <div class="row">{{name}}</div>
        <div class="row">
          <img data-star='1' class='starHover' src="../images/star_empty.png" alt="" />
          <img data-star='2' class='starHover' src="../images/star_empty.png" alt="" />
          <img data-star='3' class='starHover' src="../images/star_empty.png" alt="" />
          <img data-star='4' class='starHover' src="../images/star_empty.png" alt="" />
          <img data-star='5' class='starHover' src="../images/star_empty.png" alt="" />
        </div>

        <div class="row">
          <form class="col s12" action='/create_review' method='POST'>
            <div class="input-field">
              <input type="hidden" name="rating" id='starRatingInput' value="">
              <input type="hidden" name="BusinessId" id='businessInput' value={{businesses.id}}>
              <input id="input_text" type="text" length="300" name='message'>
              <label for="input_text">Review....</label>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
              <i class="material-icons right">send</i>
            </button>
          </form>
        </div>
        <div class="input-field"></div>
      </div>
      {{/if}}

      <div class="row display-reviews">
        * * * * *   ADD STAR RATING FILTER
      </div>

      <div class="row display-reviews">
        <div class="col s12 m6 l4">
          <div class="row">
            <img class="img-responsive" src="http://placehold.it/200x130">
            </br>
            <span id="displayname">Name of user</span>
          </div>
        </div>
        <div class="col s12 m6 l8">
          <div class="row">
            <span class="displayreview">"The star rating the user gave" DATE</span>
          </div>
          <div class="row">
            <span class="displayreview">This is the review that the user wrote about the location</span>
          </div>
        </div>
      </div>



    </div>

    <div class="col s12 m4 l4">
      <div class="card-panel z-depth-3">
        <div class="row"><span>Location Hours</span></div>
        <div class="row">hours.....</div>
      </div>
    </div>
  </div>

</div>
