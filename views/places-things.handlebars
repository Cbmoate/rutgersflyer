<div class="container">
  <div class="row">
    <div class="col s5">
      <h3>{{category}}</h3>
      <a datatarget='modal2' type="button" id='addlocationbtn' name="button" href="#">Know a great place we dont? Click to add location</a>

    </div>

    <div class="row">

      <div id="modal2" class="modal">
        <div class="modal-content">
          <h4>Add a place..</h4>
          <form class="col s12" action="/addingLocation" method="post">
            <div class="input-field col s12">
              <select name="category">
                <option value="" disabled selected>Choose a category</option>
                <option value="Restaurant">Restaurant</option>
                <option value="Entertainment">Entertainment</option>
                <option value="Retail">Retail</option>
                <option value="Transportation">Transportation</option>
                <option value="Religion">Religion</option>
              </select>
            </div>

            <div class="row">
              <div class="input-field col s6">
                <input id="input_text" type="text" length="20" name="name">
                <label for="input_text">Name of place</label>
              </div>
              <div class="input-field col s6">
                <input id="input_text" type="text" length="40" name="address">
                <label for="input_text">Address</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s6">
                <input id="icon_telephone" type="tel" class="validate" name="phone_number">
                <label for="icon_telephone">Telephone</label>
              </div>
              <div class="input-field col s6">
                <input id="input_text" type="text" length="40" name="web_site">
                <label for="input_text">Website</label>
              </div>
            </div>


            <div class="row">
              <div class="col s12">
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
              </div>
            </div>

          </form>
        </div>

        <div class="modal-footer"></div>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="col s12">Filter will go here</div>
  </div>
  <hr>

  <div class="row">

    {{#each businesses}}
    <div class="col s6">
      <div class="row">
        <div class="col s4">
          <img src="http://lorempicsum.com/nemo/125/70/5">
        </div>
        <div class="col s8">
          <a href="/info/{{name}}">{{name}}</a>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          What it says in the review....
        </div>
      </div>
    </div>
    {{/each}}

  </div>

  <div class="row">
    <ul class="pagination right">
      <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
      <li class="active"><a href="#!">1</a></li>
      <li class="waves-effect"><a href="#!">2</a></li>
      <li class="waves-effect"><a href="#!">3</a></li>
      <li class="waves-effect"><a href="#!">4</a></li>
      <li class="waves-effect"><a href="#!">5</a></li>
      <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
    </ul>
  </div>

</div>


