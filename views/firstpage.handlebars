<div class="row">
  <div class="input-field col s2"></div>
  <div class="input-field col s7">

    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <input id="input_text" type="text" length="40">
          <label for="input_text">Search</label>
        </div>

        <div class="input-field col s4">
          <select>
            <option value="" disabled selected>Categories</option>
            <option value="1">Restaurant</option>
            <option value="2">Transportation</option>
            <option value="3">Rutgers Buildings</option>
            <option value="4">Religion</option>
            <option value="5">Retail</option>
          </select>
        </div>

        <div class="input-field col s2">
        <button class="btn waves-effect waves-light" type="submit" name="action">Search</button>
          </div>
      </div>
    </form>

  </div>
  <div class="input-field col s3"></div>
</div>

<div class="row">
  <div class="col s4">
    <ul class="collection with-header z-depth-3">
      <li class="collection-header"><h4>Find...</h4></li>
      <li class="collection-item"><div>Restaurant<a href="/find/Restaurant" class="secondary-content"><i class="material-icons">send</i></a></div></li>
      <li class="collection-item"><div>Transportation<a href="/find/Transportation" class="secondary-content"><i class="material-icons">send</i></a></div></li>
      <li class="collection-item"><div>Rutgers Buildings<a href="/find/ruBuilding" class="secondary-content"><i class="material-icons">send</i></a></div></li>
      <li class="collection-item"><div>Religion<a href="/find/Religion" class="secondary-content"><i class="material-icons">send</i></a></div></li>
      <li class="collection-item"><div>Retail<a href="/find/Retail" class="secondary-content"><i class="material-icons">send</i></a></div></li>
    </ul>
  </div>

  {{#if firstDisplay}}
  <div class="col s8">
    <div class="row">
      <div class="col s12">
        <div class="card-panel z-depth-3">
          <div class="row"><h5><a href="/info/{{name}}">{{name}}</a></h5></div>
          <div class="row">* * * * * ....{{rating}}....</div>
          <div class="row">"{{reviews}}"</div>
        </div>
      </div>
    </div>
  </div>
  {{/if}}
</div>